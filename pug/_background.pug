//-----------------------------------------------
//-     Background for a parent relative element
//-----------------------------------------------
mixin background(background, attrs)
	if(background) 

		.background(class=background.className, style={'background-image': 'url('+background.image+')'} )&attributes(background.attrs)= attrs
			
			if(background.video)
				video(autoplay loop muted)&attributes(background.video.attrs)
					if(background.video.mp4)
						source(src=background.video.mp4+'.mp4' type="video/mp4")
					if(background.video.webm)
						source(src=background.video.webm+'.webm' type="video/webm")
					if(background.video.ogv)
						source(src=background.video.ogv+'.ogv' type="video/ogv")

			if(background.youtube)
				.youtube-background(data-property!=background.youtube)
			
			block
		///.background-holder
		= '\n'
